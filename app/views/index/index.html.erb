<div class="text-center mb-5">
  <h1>Gunma</h1>
  <p class="lead">過去の日報を検索して参考にできるサイトです</p>
</div>

<div class="row row-cols-1 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-2">
  <% @daily_reports.each do |daily_report| %>
    <div class="col">
      <div class="card link-card h-100">
        <%= link_to daily_report, class: "card-body overflow-auto link-underline link-underline-opacity-0" do %>
          <p class="h5 card-title"><%= daily_report.title %></p>
          <p class="card-subtitle mb-2 text-muted">作成者：<%= daily_report.user.full_name %></p>
          <div class="overflow-auto flex-grow-1" style="max-height: 150px;">
            <p class="card-text"><%= simple_format(daily_report.content) %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center mt-5">
  <% if user_signed_in? %>
    <%= link_to '全ての日報を見る', daily_reports_path, class: "btn btn-outline-secondary" %>
  <% else %>
    <%= link_to 'ログインして日報を見る', new_user_session_path, class: "btn btn-outline-secondary" %>
  <% end %>
</div>

<div class="d-flex justify-content-between align-items-center">
  <h1>ユーザー一覧</h1>
  <% if can? :create, User %>
    <%= link_to "新規ユーザー", new_user_path, class: 'btn btn-outline-info' %>
  <% end %>
</div>

<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item me-3">
            <%= link_to 'active', users_path, class: "nav-link text-muted fw-bold nav-link-hover-opacity" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to 'retired', retired_users_path, class: "nav-link text-muted fw-bold nav-link-hover-opacity" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to 'all', all_users_path, class: "nav-link text-muted fw-bold nav-link-hover-opacity" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div id="users">
  <table class="table">
    <thead>
      <tr>
        <td>氏名</td>
        <td>メールアドレス</td>
        <td>権限</td>
        <td></td>
        <td></td>
      </tr>
    </thead>

    <tbody class="table-group-divider">
      <% @users.each do |user| %>
        <tr class="<%= 'table-secondary' if user.retired? %>">
          <td><%= "#{user.last_name} #{user.first_name}" %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? '管理者' : '一般' %></td>
          <td><%= '退社済み' if user.retired? %></td>
          <td><%= link_to "詳細", user, class: 'btn btn-outline-secondary', style: '--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;' %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
</div>

<h1>ユーザー編集</h1>

<%= render "form", user: @user %>

<br>

<div>
  <%= link_to "戻る", user_path(@user), class: 'btn btn-outline-secondary' %>
  <% if (can? :destroy, @user) && @user != current_user %>
    <%= link_to "削除", @user, data: { turbo_method: :delete }, class: 'btn btn-outline-danger' %>
  <% end %>
</div>

<div id="<%= dom_id user %>">
  <p>
    <strong>ユーザー名:</strong>
    <%= "#{user.last_name} #{user.first_name}" %>
  </p>

  <p>
    <strong>メールアドレス:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>権限:</strong>
    <%= user.admin ? "管理者" : "一般" %>
  </p>

  <% if user.retired? %>
    <p>退職済み</p>
  <% end %>
</div>

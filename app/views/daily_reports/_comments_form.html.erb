<p class="h3 pmb-3">コメント</p>


<%= turbo_frame_tag "comments_form" do %>

  <%= render partial: 'daily_reports/comments', locals: { comments: comments } %>

  <%= form_with(model: [daily_report, comments.new]) do |form| %>
    <div class="mt-4 mb-3">
      <%= form.text_area :content, required: true, class: "form-control", rows: 3 %>
    </div>

    <%= hidden_field_tag :daily_report_id, daily_report.id %>

    <div class="text-end">
      <%= form.submit "コメントする", class: "btn btn-outline-info" %>
    </div>
  <% end %>
<% end %>

<div class="text-center mb-5">
  <h1>日報一覧</h1>
  <%= link_to "新規日報", new_daily_report_path, class: 'btn btn-outline-info' %>
</div>

<div class="row row-cols-1">
  <div class="col-md-8 offset-md-2">
    <% @daily_reports.each do |daily_report| %>
      <div class="card mb-2">
        <%= link_to daily_report, class: "card-body overflow-auto link-underline link-underline-opacity-0" do %>
          <h5 class="card-title"><%= daily_report.title %></h5>
          <p class="card-text">
            <small class="text-muted">
              <%= link_to daily_report.user.full_name, user_path(daily_report.user), class: "link-secondary link-offset-2 link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
              <%= daily_report.created_at.strftime("%Y年%m月%d日") %>
            </small>
          </p>
        <% end %>
      </div>
    <% end %>
    <div class="mt-3 mb-5">
      <%= paginate @daily_reports %>
    </div>
  </div>
</div>
